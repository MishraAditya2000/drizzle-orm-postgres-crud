{
  "compilerOptions": {
    "module": "nodenext",              // Use Nodeâ€™s ESM/CJS rules
    "moduleResolution": "nodenext",    // Match Node.js runtime behavior
    "target": "es2022",                // Modern JS features
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,           // Allows default import from CJS
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}